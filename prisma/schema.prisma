generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  username      String          @unique // We need to store usernames and images because they
  image         String? //                  otherwise cannot be fetched without a tihlde user
  firstname     String
  role          Role            @default(MEMBER)
  post          Post[]
  quotes        Quote[]
  quotesCreated Quote[]         @relation("QuoteCreated")
  attendance    Attendance[]
  eventComment  EventComment[]
  QuoteReaction QuoteReaction[]
}

enum Role {
  LEADER
  INDEKS
  ADMIN
  MEMBER
  GUEST
}

// News post
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Items we have in inventory, for both external and internal use
model InventoryItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  images      String[]
  quantity    Int // Might remove this, depends on if we want to manually track quantity
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Quote {
  id          Int             @id @default(autoincrement())
  quote       String
  context     String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  author      User            @relation(fields: [authorId], references: [id])
  createdBy   User            @relation(fields: [createdById], references: [id], name: "QuoteCreated")
  authorId    String
  createdById String
  Fine        Fine?
  reactions   QuoteReaction[]
}

model QuoteReaction {
  id       Int    @id @default(autoincrement())
  reaction String
  user     User   @relation(fields: [userId], references: [id])
  Quote    Quote  @relation(fields: [quoteId], references: [id])
  quoteId  Int
  userId   String
}

model Fine {
  id      Int    @id @default(autoincrement())
  Quote   Quote? @relation(fields: [quoteId], references: [id])
  quoteId Int?   @unique
}

// Brygginger
model Event {
  id           Int            @id @default(autoincrement())
  title        String
  description  String
  location     String
  when         DateTime
  Attendance   Attendance[]
  EventComment EventComment[]
}

// Attendance for events
model Attendance {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])
  present   Boolean
  userId    String
  eventId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EventComment {
  id        Int      @id @default(autoincrement())
  content   String
  author    User     @relation(fields: [userId], references: [id])
  userId    String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

